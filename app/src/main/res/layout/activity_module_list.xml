<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/module_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvCourseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Modul untuk [Judul Kursus]"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvModulesStandalone"
            android:layout_width="match_parent"
            android:layout_height="0dp"     android:layout_weight="1"      android:layout_marginTop="8dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarModuleList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>