<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_certificate"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SERTIFIKAT KELULUSAN"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diberikan kepada:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvCertName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Peserta"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telah menyelesaikan kursus:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvCertCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Kursus"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/blue_palcom"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvCertScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nilai Akhir: 100"
            android:layout_marginTop="32dp"
            android:textStyle="italic"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>